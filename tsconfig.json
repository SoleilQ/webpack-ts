{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "outDir": "build/lib",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "importHelpers": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "@components/*": ["src/web/components/*"],
      "@layouts/*": ["src/web/layouts/*"],
      "@assets/*": ["src/web/assets/*"],
      "@pages/*": ["src/web/pages/*"],
      "@hooks/*": ["src/web/hooks/*"],
      "@store/*": ["src/web/store/*"],
      "@utils/*": ["src/web/utils/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "build", "scripts"]
}
